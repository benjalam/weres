$("#candidates-list_<%= @job_offer.id %> .favorite-link-container_<%= @candidate.id %>").html("<%= j render 'candidates/favorite_link', candidate: @candidate, job_offer: @job_offer %>");
$("#favorites_<%= @job_offer.id %> .favorite-link-container_<%= @candidate.id %>").html("<%= j render 'candidates/favorite_link', candidate: @candidate, job_offer: @job_offer %>");

// update favourites tab: append when favorited else remove
<% if @job_offer.voted_for? @candidate %>
  var candidate_row = $("#candidates-list_<%= @job_offer.id %> .candidates[data-candidate-id='<%= @candidate.id %>']");
  $("#favourites_<%= @job_offer.id %> .candidates-container").append($(candidate_row).clone(true, true));
<% else %>
  var candidate_row = $("#favourites_<%= @job_offer.id %> .candidates[data-candidate-id='<%= @candidate.id %>']");
  $(candidate_row).slideUp();
<% end %>

$('[data-toggle="tooltip"]').tooltip();


