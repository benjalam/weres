
<div class="tab-content-width-index">
  <div data-company-id="<%= company.id %>">
    <div class="candidates">
      <div class="candidates-info product-body">
          <h4><strong><%= company.name %></strong></h4>
          <p>Blacklisted on: <%= company.created_at.strftime("%b %d, %Y")%></p>
      </div>

      <div class="delete-blacklist">
        <% if current_user.company_admin %>
          <ul class="list-inline">
            <% @black_listed = CompanyCompany.find_by(black_listed_company_id: company.id, company_id: @company.id) %>
            <li>
              <%= link_to company_company_path(@black_listed.id), method: :delete, remote: true, data: { confirm: "Are you sure?" } do %>
                  <i class="fa fa-trash delete-offer"></i>
              <% end %>
            </li>
          </ul>
        <% end %>
      </div>
    </div>
  </div>
</div>

